/* Top-level widgets */
QMainWindow,
QDialog,
QDockWidget
{
    background-color: $base;
}

QMainWindow::separator {
    background: transparent;
    width: 6px;
}

/* QCheckBox widgets */
QCheckBox
{
    font-size: 11px;
    spacing: 5px;
    padding-left: 2px;
    color: $text;
}

QCheckBox::indicator {
    background-color: $basealt;
    width: 20px;
    height: 20px;
}

QCheckBox::indicator:checked {
    image: url(":/icons/resources/Checkbox.png");
}

/* QComboBox widgets */
QComboBox {
    font-size: 11px;
    color: $text;
    background-color: $basealt;
    padding: 4px;
    padding-left: 10px;
    margin-bottom: 2px;
    border-radius: 0px;
    outline: none;
    border: 0px;
    selection-background-color: $basealt;
}

QComboBox::down-arrow {
    image: url(":/icons/resources/Dropdown.png");
    width: 12px;
    height: 12px;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 16px;
    right: 4px;
    border: 0px;
    background: transparent;
}

QComboBox QAbstractItemView {
    color: #FFFFFF;
    background: $basealt;
    border: none;
    outline: none;
    selection-background-color: $basealt;
    selection-color: $text;
}

QComboBox QAbstractItemView::item {
    outline: none;
    border: none;
    padding: 4px;
}

QComboBox QAbstractItemView::item:selected {
    background: $basealt;
    color: $text;
    outline: none;
    border: none;
}

/* QLabel widgets */
QLabel {
    font-size: 11px;
    color: $text;
}

/* QLineEdit widgets */
QLineEdit
{
    font-size: 11px;
    color: $text;
    background-color: $basealt;
    padding: 4px;
    padding-left: 10px;
    border-radius: 0px;
    selection-background-color: $basealt;
}

/* QListWidget widgets */
QListView
{
    font-size: 11px;
    font-weight: normal;
    color: $text;
    outline: none;
    background-color: $base;
    selection-background-color: $basealt;
}

QListView::item {
    height: 25px;
    background: $basealt;
}

QListView::item:alternate {
    background: $base;
}

QListView::item:selected:active {
    background: $basealt;
}

QListView::item:selected:!active {
    color: $text;
    background: $basealt;
}

/* QMenu widgets */
QMenu
{
    font-size: 10px;
    color: $text;
    background-color: $base;
    padding: 4px;
    border-radius: 0px;
}

QMenu::item {
    padding: 6px 20px;
    background-color: transparent;
}

QMenu::item:selected {
    background: $basealt;
}

QMenu::item:disabled {
    color: $textdisabled;
    background-color: transparent;
}

QMenu::right-arrow {
    image: url(":/icons/resources/Right.png");
    width: 12px;
    height: 12px;
}

/* QWidgets widgets */
QWidget#filedropBar,
QWidget#logBar,
QWidget#messageBar,
QWidget#monitorBar,
QWidget#preferencesBar,
QWidget#presetBar
{
    background-color: $basealt;
    border-radius: 5px;
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
}

QWidget#filedropWidget,
QWidget#logWidget,
QWidget#monitorWidget,
QWidget#optionsWidget,
QWidget#preferencesWidget,
QWidget#presetWidget
{
    background-color: $basealt;
    border-radius: 5px;
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
}

QWidget#optionswidget
{
    background-color: $basealt;
}

/* QPushButton widgets */
QPushButton
{
    font-size: 11px;
    color: $text;
    background-color: 
    QLinearGradient( 
        x1: 0, y1: 0, x2: 0, y2: 1, 
        stop: 0 $accent,
        stop: 1.0 $accentalt
    );
    height: 20px;        
    border: 1px solid $border;
    border-radius: 0px;        
    padding: 2px;
    padding-left: 5px;
    padding-right: 5px;
}

QPushButton:default
{
    font-weight: bold;
    padding-left: 8px;
    padding-right: 8px;
    background-color: 
    QLinearGradient( 
        x1: 0, y1: 0, x2: 0, y2: 1, 
        stop: 0 $accent,
        stop: 1.0 $accentalt
    );
}

QPushButton:disabled
{
    color: $textdisabled;
}

QPushButton:pressed
{
    background-color: 
    QLinearGradient( 
        x1: 0, y1: 0, x2: 0, y2: 1, 
        stop: 0 $accent,
        stop: 1.0 $accentalt
    );
}

/* QProgressBar widgets */
QProgressBar {
    min-height: 10px;
    max-height: 10px; 
    border-radius: 4px;
    background-color: $basealt;
}

QProgressBar::chunk {
    border-radius: 4px;
    background-color: $progress;
}

/* QScrollArea widgets */
QScrollArea
{
    background-color: $basealt;
    border: 0px;
}

/* QSplitter widgets */
QSplitter::handle {
    background-color: $basealt;
    height: 5px;
}

/* QTextBrowser widgets */
QTextBrowser
{
    color: $text;
    font-size: 11px;
    font-weight: normal;
    border: 0px;
    background: $base;
    selection-background-color: $basealt;
}

QTextBrowser:!active 
{
    color: $text;
    background: $base;
}

/* QTreeView widgets */
QTreeView
{
    font-size: 11px;
    font-weight: normal;
    color: $text;
    border: 0px;
    outline: none;
    selection-background-color: transparent;
    background-color: $base;
    alternate-background-color: $base;
}

QTreeView::item {
    height: 24px;
    background: $basealt;
}

QTreeView::item:alternate {
    background: $base;
}

QTreeView::item:selected:active {
    background: $basealt;
}

QTreeView::item:selected:!active {
    color: $text;
    background: $basealt;
}

QTreeView QHeaderView:section
{
    color: $text;
    font-size: 10px;
    font-weight: normal;
    border: 1px solid $border;
    background: $basealt;
    padding: 4px;
    padding-left: 10px;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:has-children:has-siblings:closed {
    image: url(":/icons/resources/Closed.png");
    background: transparent;    
}

QTreeView::branch:has-children:!has-siblings:open,
QTreeView::branch:has-children:has-siblings:open {
    image: url(":/icons/resources/Open.png");
    background: transparent;    
}

/* QToolButton widgets */
QToolButton
{
    background-color: 
    QLinearGradient( 
        x1: 0, y1: 0, x2: 0, y2: 1, 
        stop: 0 $accent,
        stop: 1.0 $accentalt
    );   
    border: 1px solid $border;
    padding: 2px;
}

QToolButton:pressed
{
    background-color: 
    QLinearGradient( 
        x1: 0, y1: 0, x2: 0, y2: 1, 
        stop: 0 $accent,
        stop: 1.0 $accentalt
    );
}

QToolButton#togglePreset,
QToolButton#toggleFiledrop,
QToolButton#showSaveto,
QToolButton#toggleLog
{
    padding: 2px;
    border: 0px;
    background-color: transparent;
}

/* QScrollBar widgets */
QScrollBar:horizontal {
    background: $basealt;
    height: 6px;
    margin: 0;
    border: none;
}

QScrollBar::handle:horizontal {
    background: $text;
    min-width: 6px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal:hover {
    background: $scrollbar;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    background: none;
    width: 0;
}

QScrollBar::left-arrow:horizontal,
QScrollBar::right-arrow:horizontal {
    background: none;
    width: 0;
    height: 0;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

QScrollBar:vertical {
    background: $basealt;
    width: 6px;
    margin: 0;
    border: none;
}

QScrollBar::handle:vertical {
    background: $text;
    min-height: 6px;
    border-radius: 5px;
}

QScrollBar::handle:vertical:hover {
    background: $scrollbar;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    background: none;
    height: 0;
}

QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical {
    background: none;
    width: 0;
    height: 0;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

QAbstractScrollArea::corner { 
    background: $basealt;
}

/* QSlider widgets */
QSlider
{
    margin: 0px;
}

QSlider::groove:horizontal
{
    height: 5px;
    background-color: $basealt;
    border: 1px solid $border;
    border-radius: 3px;
    margin: 2px 0;
}

QSlider::sub-page:horizontal
{
    height: 5px;
    background-color: $accentalt;
    border: 1px solid $border;
    border-radius: 4px;
    margin: 2px 0;
}

QSlider::handle:horizontal
{
    background: $scrollbar;
    width: 13px;
    margin: -4px 0;
    border-radius: 6px;
}

/* QWidgets widgets */
QWidget#filterWidget,
QWidget#renderWidget,
QWidget#outlinerWidget,
QWidget#inspectorWidget
{
    background-color: $basealt;
    border-radius: 10px;
}
